// Code horizontal scroll bar is not aligned correctly
div.line-numbers-mode pre {
  padding-left: 1em !important;
  margin-left: 3.5em !important;
}

// Sub groups are grayed out
.sidebar-group.is-sub-group > .sidebar-heading:not(.clickable) {
  opacity: 1 !important;
}

.site-name {
  display: none !important;
}

.depth-1 .sidebar-heading {
  font-size: 1em !important;
}
table {
  width: fit-content;
  margin: 0 auto;
}
th,
td {
  padding: 0.35em;
}
img {
  margin: 0 auto;
  display: block;
}
// Create custom formatting for ```asciiart blocks
.language-asciiart {
  font-size: 14px !important;
  background-color: transparent !important;
  margin-left: -9% !important;
}
.language-asciiart pre {
  line-height: 1.0 !important;
  overflow: hidden !important;
}
.language-asciiart pre code {
  color: black !important;
}
.language-asciiart > .line-numbers-wrapper {
  display: none;
}
.language-asciiart::after {
  display: none;
}
